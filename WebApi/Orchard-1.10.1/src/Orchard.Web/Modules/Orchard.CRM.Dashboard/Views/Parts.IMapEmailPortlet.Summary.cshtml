<article class="portlet panel panel-default">
    <header><a href="@Url.Action("Index", "Admin", new { area = "Settings", groupInfoId = "IMAP Email Client" })" target="_blank">@T("IMAP Email Client Settings")</a></header>
    <div class="body">
        @{
            bool isConfigured = Model.Model.IsConfigured;
        }
        @if (isConfigured)
        {
            <div class="config-props">
                <div class="body">
                    <div class="configured-properly"><a href="@Url.Action("Index", "Admin", new { area = "Settings", groupInfoId = "IMAP Email Client" })" target="_blank">@T("SMTP Email is configured properly.")</a></div>
                    <div>
                        <label>@T("Host")</label>
                        <a href="@Url.Action("Index", "Admin", new { area = "Settings", groupInfoId = "IMAP Email Client" })" target="_blank" class="setting-value">@Model.Model.Host</a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="config-props">
                <div><a class="not-configured" href="@Url.Action("Index", "Admin", new { area = "Settings", groupInfoId = "IMAP Email Client" })" target="_blank">@T("Not configured.")</a></div>
                <div class="body">
                    <div class="description">@T("By settings IMAP Email Client, Orchard collaboration can receive emails and create corresponding tickets for them")</div>
                </div>
            </div>
        }
    </div>
</article>