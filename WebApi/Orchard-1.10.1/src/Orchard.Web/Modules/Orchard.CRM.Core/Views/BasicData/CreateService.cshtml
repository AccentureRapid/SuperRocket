@using Orchard.CRM.Core.ViewModels;
@model ServiceViewModel
@Display(New.Stylesheet())
@using (Html.BeginFormAntiForgeryPost(Url.Action("CreateServicePost", "BasicData", new { area = "Orchard.CRM.Core" }), FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <h1>@T("Create Service")</h1>
    <div class="group">
        <fieldset>
            <label for="Name">@T("Name")</label>
            <input id="Name" name="Name" value="@Model.Name" type="text" class="text-medium" />
            @Html.ValidationMessageFor(c => c.Name)
       </fieldset>
        <fieldset>
            <label for="Order">@T("Description")</label>
            <textarea name="Description">@Model.Description</textarea>
            @Html.ValidationMessageFor(c => c.Description)
     </fieldset>
        <fieldset class="save-button">
            <button class="primaryAction" type="submit" value="@T("Save")">@T("Save")</button>
            <a class="admin-cancel" href="@Url.Action("Services", "BasicData", new { area = "Orchard.CRM.Core" })"><span>@T("Cancel")</span></a>
        </fieldset>
    </div>
}
