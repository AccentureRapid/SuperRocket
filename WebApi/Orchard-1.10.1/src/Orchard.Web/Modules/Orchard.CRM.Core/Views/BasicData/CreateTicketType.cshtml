@using Orchard.CRM.Core.ViewModels;
@model TicketTypeViewModel
@Display(New.Stylesheet())

@using (Html.BeginFormAntiForgeryPost(Url.Action("CreateTicketTypePost", "BasicData", new { area = "Orchard.CRM.Core" }), FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <h1>@T("Create Ticket Type")</h1>
    <div class="group">
        <fieldset>
            <label for="Name"> @T("Name")</label>
            <input id="Name" name="Name" value="@Model.Name" type="text" class="text-medium" />
            @Html.ValidationMessageFor(c => c.Name)
       </fieldset>
        <fieldset>
            <label for="Order">@T("Order")</label>
            <input id="OrderId" class="text-medium" name="OrderId" value="@Model.OrderId" type="number" />
            @Html.ValidationMessageFor(c => c.OrderId)
        </fieldset>
        <div>
            <button class="primaryAction" type="submit" value="@T("Save")">@T("Save")</button>
            <a class="admin-cancel" href="@Url.Action("TicketTypes", "BasicData", new { area = "Orchard.CRM.Core" })"><span>@T("Cancel")</span></a>
        </div>
    </div>
}
