@using Orchard.CRM.Core.ViewModels;
@{
    IEnumerable<PriorityViewModel> model = (IEnumerable<PriorityViewModel>)Model;
}
@{
    // Generate AntiForgeryToken
}
@using (Html.BeginFormAntiForgeryPost())
{
}
   <h1 >@T("Priorities")</h1>
    <div class="manage">
        <a class="button primaryAction"  href="@Url.Action("CreatePriority", "BasicData", new { area = "Orchard.CRM.Core"})">@T("Create")</a>
    </div>
    <table class="items" cellpadding="0" cellspacing="0">
        <thead>
            <tr>
                <th scope="col">@T("Name")</th>
                <th scope="col">@T("Order")</th>
                <th scope="col">@T("Links")</th>
            </tr>
        </thead>
        <tbody>
            @{
                bool alternative = true;
                foreach (var item in model)
                {
                    string alternativeClass = alternative ? "alt" : string.Empty;

                    alternative = !alternative;
                    <tr class="@alternativeClass">
                        <td>
                        @item.Name</td>
                        <td>@item.OrderId</td>
                        <td>
                            <a href="@Url.Action("EditPriority", "BasicData", new { area = "Orchard.CRM.Core", id = item.PriorityId })">@T("Edit")</a> |
                            <a href="@Url.Action("RemovePriority", "BasicData", new { area = "Orchard.CRM.Core", id = item.PriorityId })" itemprop = "RemoveUrl UnsafeUrl">@T("Remove")</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
