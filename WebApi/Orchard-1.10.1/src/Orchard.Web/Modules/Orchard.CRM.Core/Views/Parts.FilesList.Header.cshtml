@{ 
    string classes = Model.Classes != null ? string.Join(" ", Model.Classes) : string.Empty;
}
<span class="@classes header">
    @if (Model.Count == 0)
    {
        @T("Files")
    }
    else
    {
        int count = Model.Count;
        <span>@count</span>
        <span>&nbsp;@T("Files")</span>
    }
</span>