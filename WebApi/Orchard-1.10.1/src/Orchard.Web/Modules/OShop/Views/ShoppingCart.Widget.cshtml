@using OShop.Extensions;
@using OShop.Models;

@{
    ShoppingCart cart = Model.Cart;
    var numberFormat = WorkContext.NumberFormat();
}

@if (cart.Items.Any()) {
    <article>@T.Plural("1 item", "{0} items", cart.Items.ItemsCount()) : @String.Format(numberFormat, "{0:C}", cart.CartTotal())</article>
    @Html.ActionLink(T("My cart").Text, "Index", "ShoppingCart", new { area = "OShop" }, new { })
}
else {
    @Display(New.ShoppingCart_Empty())
}