<div class="well well-sm logreg lostpassword">
    <h3>@Html.TitleForPage(T("Lost Password").ToString())</h3>
    <p>@T("Please enter your username or email address. You will receive a link to create a new password via email.")</p>
    <hr />
    @using (Html.BeginFormAntiForgeryPost(Url.Action("RequestLostPassword"), FormMethod.Post, new { @class = "form-horizontal" })) {
        <!-- Username -->
        <div class="form-group">
            <label for="username" class="col-lg-4 control-label">@T("Username or Email")</label>
            <div class="col-lg-8">
                @Html.TextBox("username", string.Empty, new { @class = "form-control" })
                @Html.ValidationMessage("username")
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-4 col-lg-8">
                <button type="submit" class="btn btn-primary">@T("Send Request")</button>
            </div>
        </div>
    }
</div>
