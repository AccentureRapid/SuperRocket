@using Orchard.ContentManagement

@if (Html.ValidationMessage("_FORM") != null)
{
    <!-- Display the error notification if login fails. Th error message generated by the Orchard framework, but we want to display it here.. -->
    <!-- See Orchard.Web\Modules\OrchardUsers\Controllers\AccountController.cs -->
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        @Html.ValidationMessage("_FORM")
    </div>
}
<div class="well well-sm logreg col-xs-12 col-md-6 col-md-offset-3">
    @Display(New.LogOn_Form())
</div>
